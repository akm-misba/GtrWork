@model EditProductModel
@{
    ViewData["Title"] = "Edit";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Edit An Existing Order Details</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="DashBoard">DashBoard</a></li>
                    <li class="breadcrumb-item active">Edit Order</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-info">
                    <div class="card-header">
                        <h3 class="card-title">Edit An Existing Order Details</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form class="form-horizontal" method="post" asp-controller="Product"
                          asp-action="Edit" asp-antiforgery="true">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="card-body">
                            <div class="form-group row">
                                <label asp-for="Product_Id" class="col-sm-2 col-form-label">Product_Id Name</label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="Product_Id" class="form-control"
                                           id="product_id" placeholder="Product_Id">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="BrandName" class="col-sm-2 col-form-label">Brand Name</label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="BrandName" class="form-control"
                                           id="brandname" placeholder="BrandName">
                                </div>
                            </div>


                            <div class="form-group row">
                                <label asp-for="ModelName" class="col-sm-2 col-form-label">Model Name</label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="ModelName" class="form-control"
                                           id="modelname" placeholder="ModelName">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label asp-for="Price" class="col-sm-2 col-form-label">Price</label>
                                <div class="col-sm-10">
                                    <input type="number" asp-for="Price" class="form-control"
                                           id="price" placeholder="Price">
                                </div>
                            </div>


                            <div class="form-group row">
                                <label asp-for="LastPurchaseDate" class="col-sm-2 col-form-label">Last Purchase Date</label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="LastPurchaseDate" class="form-control"
                                           id="lastpurchasedate" placeholder="dd/mm/yyyy">
                                </div>
                            </div>




                            <div class="form-group row">
                                <label asp-for="Status" class="col-sm-2 col-form-label">Status</label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="Status" class="form-control"
                                           id="status" placeholder="Status">
                                </div>
                            </div>
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <button type="submit" class="btn btn-info">Edit</button>
                            <a asp-action="Index" asp-controller="Product"
                               class="btn btn-default float-right">Back</a>
                        </div>
                        <!-- /.card-footer -->
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>





